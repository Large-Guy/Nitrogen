module math;

f32 sin(f32 x)
{
    i32 D = 10;
    f32 PI = 3.14159265f;
    
    f32 y = 0;
    for(i32 n = 0; n < D; n++)
    {
        y += ((-1)**n * (x % (2 * PI)) ** (1 + 2*n)) / factorial(1 + 2 * n);
    }
    
    return y;
}

f32 cos(f32 x)
{
    i32 D = 10;
    f32 PI = 3.14159265f;
    
    f32 y = 0;
    for(i32 n = 0; n < D; n++)
    {
        y += ((-1)**n * (x % (2 * PI)) ** (2*n)) / factorial(2 * n);
    }
    
    return y;
}